<div class="page-header">
  <div class="page-title">
    <h2>Unidades de Aprendizaje</h2>
    <span>Good morning, John!</span>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Pin</th>
        <th>Credits</th>
        <th>Period</th>
        <th>Academy</th>
        <th>Master</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @subjects.each do |subject| %>
        <tr>
          <td><%= subject.name %></td>
          <td><%= subject.pin %></td>
          <td><%= subject.credits %></td>
          <td><%= subject.period %></td>
          <td><%= subject.academy.name %></td>
          <td><%= subject.master.name %></td>
          <td><%= link_to 'Show', subject %></td>
          <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
          <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Subject', new_subject_path %>
  </div>
</div>
