<div class="login">
  <div class="logo">
		R<strong>UU</strong>A
	</div>
  <div class="box">
    <div class="content">
      <%= form_tag('/transporte', method: 'post',  :class => "form-vertical login-form") do |f| %>
        <h3 class="form-title">Registrate</h3>
        <% flash.each do |name, msg| -%>
          <%= content_tag :div, msg, class: name %>
        <% end -%>
        <div class="form-group">
          <%= text_field_tag(:name, "", autofocus: true, :class => "form-control", :placeholder => "Nombre", :require => true) %>
        </div>
        <div class="form-group">
          <%= text_field_tag(:lname, "", autofocus: true, :class => "form-control", :placeholder => "Apellido Paterno", :require => true) %>
        </div>
        <div class="form-group">
          <%= text_field_tag(:mname, "", autofocus: true, :class => "form-control", :placeholder => "Apellido Materno", :require => true)  %>
        </div>
        <div class="form-group">
          <%= text_field_tag(:pre_pin, "", autofocus: true, :class => "form-control", :placeholder => "Preboleta", :require => true)  %>
        </div>
        <%= hidden_field_tag(:major_id, "3") %>
        <div class="form-actions">
          <%= submit_tag "Aceptar", :class => "submit btn btn-primary pull-right" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
