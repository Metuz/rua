<h1>Listing students</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lname</th>
      <th>Mname</th>
      <th>Pin</th>
      <th>Entry</th>
      <th>Graduation</th>
      <th>Master</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.lname %></td>
        <td><%= student.mname %></td>
        <td><%= student.pin %></td>
        <td><%= student.entry %></td>
        <td><%= student.graduation %></td>
        <td><%= student.master %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

