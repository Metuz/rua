<!DOCTYPE html>
<html>
  <head>
    <title>RUAA</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <% if user_signed_in? %>
    <body>
      <%= render 'layouts/header' %>
      <%= render 'layouts/sidebar' %>
      <div id="content">
        <div class="container">
          <%= yield %>
        </div>
      </div>
    </body>
  <% else %>
    <body class="login">
      <%= yield %>
    </body>
  <% end %>
</html>
