<div class="crumbs">
  <ul id="breadcrumbs" class="breadcrumb">
    <li><%= link_to "Dashboard", root_path %></li>
  </ul>
  <ul class="crumb-buttons">
    <li><%= link_to new_major_path do %><span>Agregar Carrera</span><% end %></li>
  </ul>
</div>
<div class="page-header">
  <div class="page-title">
    <h2>Carreras</h2>
    <span>Good morning, John!</span>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="widget_box">
      <div class="widget_content">
        <table class = "table table-striped table-bordered table-hover datatable">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Alumnos</th>
              <th>U. de Aprendizaje</th>
              <th>Creditos</th>
            </tr>
          </thead>
          <tbody>
            <% @majors.each do |major| %>
              <tr>
                <td><%= link_to major do %><i class="fa fa-eye"></i> <%= major.name %><% end %></td>
                <td><%= major.students.count %></td>
                <td><%= major.subjects.count %></td>
                <td><%= major.subjects.sum(:credits) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
