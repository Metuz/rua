<div class="crumbs">
  <ul id="breadcrumbs" class="breadcrumb">
    <li><a href="#">Dashboard</a></li>
  </ul>
  <ul class="crumb-buttons">
    <li><%= link_to new_teacher_path do %><span>Agregar Profesor</span><% end %></li>
  </ul>
</div>
<div class="page-header">
  <div class="page-title">
    <h2>Profesores</h2>
    <span>Good morning, John!</span>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="widget_box">
      <div class="widget_content">
        <table class = "table table-striped table-bordered table-hover datatable">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>No. Empleado</th>
              <th>Licenciatura</th>
              <th>Postgrado</th>
              <th>Dictamen</th>
              <th>Turno</th>
              <th>Antiguedad</th>
              <th>Horas Totales</th>
            </tr>
          </thead>
          <tbody>
            <% @teachers.each do |teacher| %>
              <tr>
                <td><%= link_to teacher do %><i class="fa fa-eye"></i> <%= teacher.name %> <%= teacher.lname %> <%= teacher.mname %><% end %></td>
                <td><%= teacher.pin %></td>
                <td><%= teacher.degree %></td>
                <td><%= teacher.master %></td>
                <td><%= teacher.dictamen %></td>
                <td><%= teacher.shift %></td>
                <td><%= teacher.age %></td>
                <td><%= teacher.total_hrs %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
