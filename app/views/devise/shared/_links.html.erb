<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="content">
    <%= link_to "Olvidaste tu contraseña?", new_password_path(resource_name) %><br />
  </div>
<% end -%>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="content">
    <%= link_to "Registrarse", new_registration_path(resource_name) %><br />
  </div>
<% end -%>
<%- if controller_name != 'sessions' %>
  <div class="content">
    <%= link_to "Iniciar Sesion", new_session_path(resource_name) %><br />
  </div>
<% end -%>
<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="content">
    <%= link_to "No recibiste instrucciones de confirmación?", new_confirmation_path(resource_name) %><br />
  </div>
<% end -%>
<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="content">
    <%= link_to "No recibiste instrucciones de desbloqueo?", new_unlock_path(resource_name) %><br />
  </div>
<% end -%>
<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div class="content">
      <%= link_to "identificarse con #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br />
    </div>
  <% end -%>
<% end -%>
