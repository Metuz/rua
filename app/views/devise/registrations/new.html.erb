<div class="login">
  <div class="logo">
		R<strong>UA</strong>A
	</div>
  <div class="box">
    <div class="content">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :class => "form-vertical login-form") do |f| %>
        <%= devise_error_messages! %>
        <h3 class="form-title">Registrate</h3>
        <div class="form-group">
					<div class="input-icon">
						<i class="fa fa-user"></i>
            <%= f.text_field :name, autofocus: true, :class => "form-control", :placeholder => "Nombre", :require => true %>
					</div>
				</div>
        <div class="form-group">
					<div class="input-icon">
						<i class="fa fa-envelope"></i>
            <%= f.email_field :email, :class => "form-control", :placeholder => "Correo", :require => true %>
					</div>
				</div>
        <div class="form-group">
          <div class="input-icon">
            <i class="fa fa-lock"></i>
            <%= f.password_field :password, :class => "form-control", :placeholder => "Contraseña", :require => true %>
            <% if @minimum_password_length %>
              <span class="help-block">Minimo <%= @minimum_password_length %> caracteres</span>
            <% end %>
          </div>
        </div>
        <div class="form-group">
          <div class="input-icon">
            <i class="fa fa-check"></i>
            <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Confirmación", :require => true %>
          </div>
        </div>
        <div class="form-actions">
          <%= link_to "Regresar", root_path, :class => "back btn btn-default pull-left" %>
          <%= f.submit "Aceptar", :class => "submit btn btn-primary pull-right" %>
				</div>
      <% end %>
    </div>
    <div class="inner-box">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
