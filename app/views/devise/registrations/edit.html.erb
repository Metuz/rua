<div class="crumbs">
  <ul id="breadcrumbs" class="breadcrumb">
    <li><a href="#">Dashboard</a></li>
  </ul>
  <ul class="crumb-buttons">
    <li><%= link_to :back do  %><span>Regresar</span><% end %></li>
  </ul>
</div>
<div class="page-header">
  <div class="page-title">
    <h2>Editar Perfil</h2>
  </div>
</div>
<div class="widget box">
  <div class="widget-content">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :class => "form-horizontal row-border" }) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <div class="row">
          <div class="col-md-4 col-md-offset-4">
            <%= f.label :name, "Nombre", :class => "control-label" %>
            <%= f.text_field :name, :class => "form-control" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-md-4 col-md-offset-4">
            <%= f.label :email, "Correo", :class => "control-label" %>
            <%= f.email_field :email, :class => "form-control" %>
          </div>
        </div>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="form-group">
        <div class="row">
          <div class="col-md-4 col-md-offset-4">
            <%= f.label :password, "Contrase침a", :class => "control-label" %>
            <%= f.text_field :password, :class => "form-control" %>
            <span class="help-block">Dejar en blanco si no deseas cambiarla</span>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-md-4 col-md-offset-4">
            <%= f.label :password_confirmation, "Confirmaci칩n Contrase침a", :class => "control-label" %>
            <%= f.text_field :password_confirmation, :class => "form-control" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-md-4 col-md-offset-4">
            <%= f.label :current_password, "Contrase침a Actual", :class => "control-label" %>
            <%= f.text_field :current_password, :class => "form-control" %>
            <span class="help-block">Necesaria para guardar cambios</span>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-md-10">
            <%= f.submit "Aceptar", :class => "btn btn-primary pull-right" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="widget box">
  <div class="widget-content">
    <h3 class="form-title">Elimnar cuenta</h3>
    <p>Infeliz? <%= button_to "Borrar Cuenta", registration_path(resource_name), data: { confirm: "Seguro?" }, method: :delete %></p>
  </div>
</div>
