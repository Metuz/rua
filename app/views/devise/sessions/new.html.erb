<div class="login">
  <div class="logo">
		R<strong>U</strong>A
	</div>
  <div class="box">
    <div class="content">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :class => "form-vertical login-form") do |f| %>
        <%= devise_error_messages! %>
        <h3 class="form-title">Iniciar Sesion</h3>
        <div class="form-group">
					<div class="input-icon">
						<i class="fa fa-user"></i>
            <%= f.text_field :login, autofocus: true, :class => "form-control", :placeholder => "Nombre/Correo", :require => true %>
					</div>
				</div>
        <div class="form-group">
          <div class="input-icon">
            <i class="fa fa-lock"></i>
            <%= f.password_field :password, :class => "form-control", :placeholder => "ContraseÃ±a", :require => true %>
          </div>
        </div>
        <div class="form-actions">
          <% if devise_mapping.rememberable? -%>
            <label class="checkbox pull-left"><%= f.check_box :remember_me, :class => "uniform" %> Recordar</label>
          <% end -%>
          <%= f.submit "Aceptar", :class => "submit btn btn-primary pull-right" %>
				</div>
      <% end %>
    </div>
    <div class="inner-box">
      <%= render "devise/shared/links" %>
    </div>
</div>
