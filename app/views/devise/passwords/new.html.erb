      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "form-vertical login-form" }) do |f| %>
        <%= devise_error_messages! %>
        <h3 class="form-title">Olvidaste tu contraseÃ±a?</h3>
